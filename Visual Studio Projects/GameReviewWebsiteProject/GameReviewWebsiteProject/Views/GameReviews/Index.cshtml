@model IEnumerable<GameReviewWebsiteProject.Models.GameReview>

@{
    ViewBag.Title = "Game Reviews";
}

<h2>Game Reviews!</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Game.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               <h2> @Html.ActionLink(item.Game.Title, "Details", new { id = item.GameReviewId })</h2>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GameReviewId }) |
 |
            @Html.ActionLink("Delete", "Delete", new { id = item.GameReviewId })
            </td>
        </tr>
    }

</table>
